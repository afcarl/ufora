#pragma once

template<class T>
class RefcountingPtr {
public:
	typedef T pointed_to_type;

	RefcountingPtr() :
			mPtr(nullptr)
		{
		}

	RefcountingPtr(T* inPtr) :
			mPtr(inPtr)
		{
		if (mPtr)
			mPtr->incrementRefcount();
		}

	~RefcountingPtr()
		{
		if (mPtr)
			mPtr->decrementRefcount();
		}

	RefcountingPtr(const RefcountingPtr& in) :
			mPtr(in.mPtr)
		{
		if (mPtr)
			mPtr->incrementRefcount();
		}

	RefcountingPtr& operator=(const RefcountingPtr& inOther)
		{
		if (inOther.mPtr)
			inOther.mPtr->incrementRefcount();
		if (mPtr)
			mPtr->decrementRefcount();
		mPtr = inOther.mPtr;

		return *this;
		}

	T* operator->() const
		{
		return mPtr;
		}

	T& operator*() const
		{
		return *mPtr;
		}

	T* ptr() const
		{
		return mPtr;
		}

	bool isEmpty() const
		{
		return mPtr == nullptr;
		}

	void reset()
		{
		if (mPtr)
			mPtr->decrementRefcount();
		mPtr = nullptr;
		}

	void reset(T* in)
		{
		if (in)
			in->incrementRefcount();
		if (mPtr)
			mPtr->decrementRefcount();
		mPtr = in;
		}

	bool operator<(const RefcountingPtr& other) const
		{
		return mPtr < other.mPtr;
		}

	bool operator!=(const RefcountingPtr& other) const
		{
		return mPtr != other.mPtr;
		}

	bool operator==(const RefcountingPtr& other) const
		{
		return mPtr == other.mPtr;
		}

private:
	T* mPtr;
};


categoricalData: (
    let a = "a"
    let b = "b"
    let c = "c"
    let d = "d"
    let x = [a, a, a, a, a, b, b, c, c];
    let z = [a, a, b, b, b, c, c, d, d];
    let w = [0, 1, 2, 3, 4, 5, 6, 7, 8];
    let y = [0, 0, 1, 1, 1, 0, 1, 0, 0];

    let inputs = dataframe.DataFrame([x, z, w]);
    let outputs = dataframe.Series(y);
    
    (inputs, outputs)
    );

